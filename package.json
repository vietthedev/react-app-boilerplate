		"@types/react": "19.1.10",
		"@types/react-dom": "19.1.7",
		"@vitejs/plugin-react-swc": "4.0.0",
		"cross-env": "10.0.0",
		"daisyui": "5.0.50",
		"jsdom": "26.1.0",
		"lefthook": "1.12.3",
